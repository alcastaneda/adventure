<h1>Animaux!</h1>
<h4>One stop for all the internet's cutest animals</h4>

<h2><%= @post.title %></h2>
<h5>by <%= @post.author.username %>  <%= @post.created_at %></h5><br><br>

<img src="<%= @post.image_url %>">
<div id='votes'>
  <%= button_to '', method: 'POST', action: 'voteup' %>
  <%= button_to '', method: 'POST', action: 'votedown' %>
  <p> Tags: <%= @post.tags.pluck(:name).join(' ') %></p>
</div><br><br>

<div id='comments'>
  <% @post.comments.each do |comment| %>
  <h3>Comment</h3>
    <%= button_to '', method: 'POST', action: 'voteup', controller: 'comments' %>
    <%= button_to '', method: 'POST', action: 'votedown', controller: 'comments' %>
    <%= comment.text %><br>
    <a href='/replies/new'>reply</a>
    <%= comment.commenter.username %><br><br>
    <% comment.replies.each do |reply| %>
      <h4>Reply</h4>
      <%= button_to '', method: 'POST', action: 'voteup', controller: 'replies' %>
      <%= button_to '', method: 'POST', action: 'votedown', controller: 'replies' %>
      <li><%= reply.text %></li>
      <li><%= reply.replier.username %></li>
    <% end %>
  <br><br>
  <% end %>
</div>
